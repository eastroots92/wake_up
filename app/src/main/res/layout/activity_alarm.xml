<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/imageView_cartoon3"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wakeUp_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동근"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wakeUp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_mid" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_mid" />

                <TextView
                    android:id="@+id/textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_mid"
                    android:text="22:22"
                    android:textColor="@color/black"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이야"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_title_mid" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView_cartoon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_alarmOffButton"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/alarm_background" />

        <TextView
            android:id="@+id/textView_alarmOffButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_height"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="@string/alarmButton"
            android:textSize="@dimen/text_title_small"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</layout>